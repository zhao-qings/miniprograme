<!-- 1. view组件的基本使用 -->
<view>hello world</view>
<view>hello coderzhao</view>

<!-- 2. hover-class属性 -->
<view class="box1" hover-class="hover-box1">
	box1
</view>

<!-- 3. hover-stay-time -->
<view class="box1" hover-class="hover-box1" hover-stay-time="{{0}}">
	box1
</view>

<!-- 4. hover-stop-propagation -->
<view class="fatherbox" hover-class="father-hover">
	<view class="box1" hover-class="hover-box1" hover-stay-time="{{0}}" hover-stop-propagation="{{true}}">
		box1
	</view>
</view>